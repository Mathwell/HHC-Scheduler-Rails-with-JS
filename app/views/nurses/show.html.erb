
<p id="notice"><%= notice %></p>

<div class="center">

  <div class="info">
    <p><strong>Name:</strong> <span class="nurseName"> <%= @nurse.name %> </span> </p>
    <p><strong >Total Number of Visits:</strong> <span class="nurseVisits"> <%= @nurse.visits.count %> </span></p>
    <p><strong >Total Number of Patients:</strong> <span class="nursePatients"><%= @nurse.patients.count %> </span></p>
    <p><strong>Role:</strong> <%= @nurse.role %></p>
    <% if current_user.admin %>
      <%= link_to 'Edit Nurse', [:edit, @nurse] %></p>
      <a href="#1" class="js-back" data-id="<%=@nurse.id %>">Back...</a>
      <a href="#" class="js-next" data-id="<%=@nurse.id %>">Next...</a>
      <br>
    <% else %>

    <% end %>
    <%= link_to 'Back', nurses_path,class: "btn btn-primary btn-light" %></p>
  </div>
</div>

<h1><span class="nurseNameVisits"><%=@nurse.name%>'s Visits</span></h1>

<button class="nurses_visit" id="<%=@nurse.id%>">Show Visits</button>
<div class="visits"></div>
