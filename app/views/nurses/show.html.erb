
<p id="notice"><%= notice %></p>

<div class="center">

  <div class="info">
    <p><strong>Name:</strong> <%= @nurse.first_name+" "+@nurse.last_name %> </p>

    <p><strong>Total Number of Visits:</strong> <%= @nurse.visits.count %></p>
    <p><strong>Total Number of Patients:</strong> <%= @nurse.patients.count %></p>
    <p><strong>Role:</strong> <%= @nurse.role %></p>
    <% if current_user.admin %>
      <%= link_to 'Edit Nurse', [:edit, @nurse] %></p>
    <% else %>

    <% end %>
    <%= link_to 'Back', nurses_path,class: "btn btn-primary btn-light" %></p>
  </div>
</div>

<h1><%=@nurse.name%>'s Visits</h1>
<button class="js-more" data-id="<%= @nurse.id %>"> Show Visits...</button>
<div class="visits"></div>


<script type="text/javascript" charset="utf-8">
$(function () {
  
  $(".js-more").on("click", function(event) {
    event.preventDefault();
    var id=$(".js-more").attr("data-id")
    $.get("/nurses/"+id+"/visits.json", function(data) {
      let visitList=""
      data.forEach(function(visit){
        visitList=+visit["date"]+" "+ visit["patient"]["last_name"];      
        })
        $(".visits").text(visit["date"]+" "+ visit["patient"]["last_name"];      
    });
   
  });
});

</script>

